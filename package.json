{
  "name": "wekanchatbot",
  "version": "1.0.0",
  "description": "A chatbot for wekan integration into synology chat. (Other Plattforms can be added later)",
  "main": "index.js",
  "scripts": {
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "start:tsc": "tsc && node ./dist/index.js",
    "start:dev": "nodemon ./src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --config .prettierrc ./src/**/*.ts --write && prettier --config .prettierrc ./test/**/*.ts --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azorimor/wekanchatbot.git"
  },
  "keywords": [
    "synologychat",
    "chatbot",
    "wekan"
  ],
  "author": "azorimor@gmail.com",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Azorimor/wekanchatbot/issues"
  },
  "homepage": "https://github.com/Azorimor/wekanchatbot#readme",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "@types/pino": "^6.3.11",
    "@types/pino-http": "^5.4.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "pino-pretty": "^5.1.3",
    "prettier": "^2.3.2",
    "supertest": "^6.1.5",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "pino": "^6.13.0",
    "pino-http": "^5.6.0"
  }
}
